// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Order {
  id                  BigInt   @id @default(autoincrement())
  orderNumber         Int      // @unique
  totalPrice          String   @default("0")
  createdAt           DateTime @default(now())
  updatedAt           DateTime @default(now())
  paymentGatewayNames String   @default("")
  customer            Customer @relation(fields: [customerId], references: [id])
  customerId          BigInt
  tags                Tag[]
  // shopify-event-id   BigInt // To handle duplicate webhooks
  // @@index([customerId], name: "customer_id")
  // @@index([orderNumber], name: "order_number")
  // @@index([tags.name], name: "tags_name")
  // @index([updatedAt], name: "updated_at") // Because maybe default order by updatedAt/createdAt
}

model Customer {
  id        BigInt  @id @default(autoincrement())
  firstName String?
  lastName  String?
  email     String?
  address   String
  Order     Order[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  orders Order[]
  // @index([name], name: "name")
}
